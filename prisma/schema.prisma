generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Schedule {
  id        String   @id @default(uuid())
  accountId Int
  agentId   Int
  startTime DateTime
  endTime   DateTime
  tasks     Task[]
}

model Task {
  id        String   @id @default(uuid())
  accountId Int
  schedule  Schedule @relation(fields: [scheduleId], references: [id])
  scheduleId String
  startTime DateTime
  duration  Int
  type      TaskType
}

enum TaskType {
  break
  work
}
